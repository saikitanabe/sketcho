<additionalCode suffix="_h4gwt15" implementedInterface="net.sf.hibernate4gwt.pojo.base.ILazyPojo">
	<!--
		ATTRIBUTES 
	 -->
    <attributes>
    	<attribute name="_lazyProperties" visibility= "protected" 
    			   type="java.util.List" collectionType="String" 
    			   defaultValue="new java.util.ArrayList()">
    	</attribute>
    </attributes>
    
    <!--
    	METHODS 
     -->
    <methods>
    	<!-- addLazyProperty -->
    	<method visibility="public" returnType="void" name="addLazyProperty" javadoc="">
    		<parameters>
    			<parameter type="String" name="property" />
    		</parameters>
    		<code>
    			{ _lazyProperties.add(property); }
    		</code>
    	</method>
    	
    	<!--  removeLazyProperty -->
    	<method visibility="public" returnType="void" name="removeLazyProperty" javadoc="">
    		<parameters>
    			<parameter type="String" name="property" />
    		</parameters>
    		<code>
    			{ _lazyProperties.remove(property); }
    		</code>
    	</method>
    	
    	<!-- isLazyProperty -->
    	<method visibility="public" returnType="boolean" name="isLazyProperty" javadoc="">
    		<parameters>
    			<parameter type="String" name="property" />
    		</parameters>
    		<code>
    			{ return _lazyProperties.contains(property); }
    		</code>
    	</method>
    	
    	<!-- getLazyString -->
    	<method visibility="public" returnType="String" name="getLazyString" javadoc="">
    		<code>
    		<![CDATA[
    		{
				StringBuffer result = new StringBuffer();
				for (int index = 0 ; index < _lazyProperties.size() ; index ++)
				{
					result.append(_lazyProperties.get(index));
					result.append(',');
				}
				return result.toString();
			}
			]]>
    		</code>
    	</method>
    	
    	<!-- getLazyProperties -->
    	<method visibility="public" returnType="java.util.List" 
    			returnCollectionType="String" name="getLazyProperties">
    		<code>
    			{ return _lazyProperties; }
    		</code>
    	</method>
    	
    	<!-- setLazyProperties -->
    	<method visibility="public" returnType="void" name="setLazyProperties" >
    		<parameters>
    			<parameter type="java.util.List" collectionType="String" name="properties" />
    		</parameters>
    		<code>
    			{ _lazyProperties = properties; }
    		</code>
    	</method>
    </methods>
</additionalCode>