<module>

	<!-- Inherit the core Web Toolkit stuff.                  -->
	<inherits name='com.google.gwt.user.User'/>
	<inherits name='net.sf.hibernate4gwt.Hibernate4Gwt14'/>
	
	<!-- Specify the app entry point class.                   -->
	<entry-point class='net.sf.hibernate4gwt.testApplication.client.TestApplication'/>
	
	<!-- Additional source path -->
	<source path='domain'/>
	<source path='client'/>
  
  	<!-- Servlet path -->
  	<servlet path="/MessageRemote" class="net.sf.hibernate4gwt.testApplication.server.gwt.MessageRemoteImpl"/>
  	<servlet path="/LoginRemote" class="net.sf.hibernate4gwt.testApplication.server.gwt.LoginRemoteImpl"/>
  	<servlet path="/UserRemote" class="net.sf.hibernate4gwt.testApplication.server.gwt.UserRemoteImpl"/>
  	<servlet path="/ConfigurationRemote" class="net.sf.hibernate4gwt.testApplication.server.gwt.ConfigurationRemoteImpl"/>
</module>
