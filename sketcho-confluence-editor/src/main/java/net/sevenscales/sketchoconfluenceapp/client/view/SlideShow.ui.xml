<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.prev {
			float: right;
			margin: 5px;
		}
		
		.next {
      margin: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:DialogBox ui:field="dialog" autoHide="true" modal="true"
			animationEnabled="true" glassEnabled="true">
			<g:caption>
				<b>View images</b>
			</g:caption>
			<g:VerticalPanel>
			  <g:SimplePanel ui:field="slidePanel"></g:SimplePanel>
<!-- 				<g:Image ui:field="slide"></g:Image> -->
				<g:HorizontalPanel width="100%">
					<g:Button ui:field='prevButton' addStyleNames="{style.prev}">&#171;</g:Button>
					<g:Button ui:field='nextButton' addStyleNames="{style.next}">&#187;</g:Button>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:DialogBox>
	</g:HTMLPanel>
</ui:UiBinder> 