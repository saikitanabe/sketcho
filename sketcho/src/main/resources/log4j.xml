<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%p - %C{1}.%M(%L) | %m%n"/>
        </layout>
    </appender>

    <logger name="net.sf.hibernate">
        <level value="FATAL"/>
    </logger>
    
    <logger name="org.hibernate">
    	<level value="FATAL"></level>
  	</logger>
    
    <logger name="org.springframework">
        <level value="FATAL"/>
    </logger>

    <logger name="net.sf.hibernate4gwt.core.beanlib.clone.CloneBeanPopulatable">
        <level value="FATAL"/>
    </logger>
    
    <logger name="net.sf.hibernate4gwt.core.LazyKiller">
        <level value="FATAL"/>
    </logger>

    <logger name="net.sf.hibernate4gwt.core.beanlib.mapper.DirectoryClassMapper">
        <level value="FATAL"/>
    </logger>

    <logger name="net.sf.hibernate4gwt.core.HibernateBeanManager">
        <level value="FATAL"/>
    </logger>
    
    <logger name="net.sf.beanlib.provider.BeanPopulator">
        <level value="FATAL"/>
    </logger>

    <logger name="net.sf.beanlib.provider.BeanTransformer">
        <level value="FATAL"/>
    </logger>
    
    <root>
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>
