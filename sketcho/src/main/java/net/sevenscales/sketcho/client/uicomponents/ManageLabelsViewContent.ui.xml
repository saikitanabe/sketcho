<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:s='urn:import:net.sevenscales.appFrame.impl.uicomponents'>

	<ui:style type='net.sevenscales.sketcho.client.uicomponents.ManageLabelsViewContent.MyStyle'>
		.title {
			font-size: 150%;
			font-weight: bold;
		}
		
		.notactive {
			text-decoration: underline;
			color: #E18400;
			cursor: pointer; cursor: hand;
		}
		.active {
			font-weight: bold;
		}
		.readstate:hover {
			background-color: #e0ecff;
		}
		.editinglabel{
			padding: 0 0 0 0;
			margin: 0 0 0 0;
			margin-right: 5px;
		}
		.editTextBox {
			width: 100%;
			margin: 0 0 0 0;
			padding: 0 0 0 0;
			border: 1px solid #959485;
			color: #222222;
			font-weight: normal;
		}
		
	</ui:style>
	<g:VerticalPanel width="100%" spacing="20">
		<g:Label styleName="{style.title}">Manage Labels</g:Label>
		<g:FlexTable ui:field="list" width="100%"></g:FlexTable>
	</g:VerticalPanel>
	
	
