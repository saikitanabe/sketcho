<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			padding-left: 7px;
			width: 100%;
		}
		.panel td {
      font-size: 90%;
		}
		.panel b {
			color: #66666e;
		}
		.closeButton {
			white-space: nowrap;
			font-size: small;
			text-decoration: underline;
			cursor: pointer;
			color: #e18525;
		}
	</ui:style>
	<g:HorizontalPanel ui:field="helpLine" styleName="{style.panel}">
		<g:Cell width="100%" verticalAlign="center">
			<g:HTML ui:field="helptext" width="100%"></g:HTML>
		</g:Cell>
<!--		<g:Cell horizontalAlign="RIGHT" verticalAlign="TOP" width="100%">-->
<!--			<g:HTML ui:field="hideHelp" addStyleNames="{style.closeButton}">Hide Help</g:HTML>-->
<!--			<g:Button ui:field="closeButton" addStyleNames="{style.closeButton}">Hide Help</g:Button>-->
<!--		</g:Cell>-->
	</g:HorizontalPanel>
</ui:UiBinder> 