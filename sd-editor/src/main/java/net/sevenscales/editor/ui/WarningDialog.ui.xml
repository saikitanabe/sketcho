<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.content {
			padding: 10px;
		}
		
		.buttons {
			padding-left: 5px;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:VerticalPanel ui:field="content" styleName="{style.content}"></g:VerticalPanel>
		<g:HorizontalPanel ui:field="buttons" spacing="5"
			styleName="{style.buttons}">
			<g:Button ui:field="doit">OK</g:Button>
			<g:Button ui:field="cancel">Cancel</g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 